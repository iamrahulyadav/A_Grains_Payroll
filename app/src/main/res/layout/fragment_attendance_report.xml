                                android:layout_height="match_parent"
                                android:background="@color/colorPrimary"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="P"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_13sdp" />
                        </RelativeLayout>

